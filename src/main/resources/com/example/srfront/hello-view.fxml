<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="188.0" prefWidth="308.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.srfront.ClientController">
   <FlowPane prefHeight="64.0" prefWidth="228.0" VBox.vgrow="SOMETIMES">
      <children>
         <Label text="IP Server" />
         <TextField fx:id="textIPServera" prefHeight="10.0" prefWidth="150.0">
            <FlowPane.margin>
               <Insets left="30.0" />
            </FlowPane.margin></TextField>
         <Label prefHeight="17.0" prefWidth="57.0" text="port RMI">
            <FlowPane.margin>
               <Insets top="10.0" />
            </FlowPane.margin></Label>
         <TextField fx:id="textPort" prefHeight="21.0" prefWidth="149.0">
            <FlowPane.margin>
               <Insets left="18.0" top="10.0" />
            </FlowPane.margin>
         </TextField>
         <Label text="Nazwa węzła">
            <FlowPane.margin>
               <Insets top="10.0" />
            </FlowPane.margin>
         </Label>
         <TextField fx:id="textNazwa">
            <FlowPane.margin>
               <Insets left="7.0" top="10.0" />
            </FlowPane.margin>
         </TextField>
         <Label text="ID węzła">
            <FlowPane.margin>
               <Insets top="10.0" />
            </FlowPane.margin>
         </Label>
         <TextField fx:id="textID">
            <FlowPane.margin>
               <Insets left="30.0" top="10.0" />
            </FlowPane.margin>
         </TextField>
      </children>
   </FlowPane>
    <Button onAction="#onOdpalButtonClick" text="Uruchom" />
   <Label text="Czy chcesz rozpocząć elekcję?" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="buttonYES" disable="true" mnemonicParsing="false" onAction="#onYESButtonClick" text="TAK">
            <HBox.margin>
               <Insets left="70.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="buttonNO" disable="true" mnemonicParsing="false" onAction="#onNOButtonClick" text="NIE">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
</VBox>
